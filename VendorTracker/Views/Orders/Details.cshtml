@using VendorTracker.Models;
@{
  Layout = "_Layout";
}
<div class="container">
  @if(Model == null)
  {
    <h1>The Order Does Not Exist</h1>
  }
  else
  {
    <div class="jumbotron">
      <h1>Order Page</h1>
    </div>
    <div id="orderDetails">
      <ul>
        <li>
          @Model.Title
          <ul>
            <li>Description: @Model.Description</li>
            <li>Date: @Model.OrderDate.ToShortDateString()</li>
            <li>Price: $@Model.Price</li>
            @if(@Model.Paid)
            {
              <li>Paid</li>
            }
            else
            {
              <li>Not Paid</li>
            }
          </ul>
        </li>
      </ul>
    </div>
    <button class="btn btn-danger" onclick="window.location.href='/vendors/details/@Model.VendorId';">Return to @Model.VendorName Page</button>
    <button class="btn btn-danger" onclick="window.location.href='/orders/edit/@Model.Id';">Edit Order</button>
  }
</div>
@Html.Partial("Header")
@Html.Partial("Footer")
