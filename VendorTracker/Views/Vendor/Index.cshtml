@using VendorTracker.Models;
<div class="Container">
  <div class="jumbotron">
    <h1>Welcome to the Vendor Page</h1>
  </div>

  <div id="vendorList">
    @if(Model.Count == 0)
    {
      <h1>There are currently no Venders!</h1>
    }
    else
    {
      <ul>
      @foreach (Vendor v in Model)
      {
          <li><a href="/vendor/@v.Id">@v.Name</a> | <a href="/vendor/@v.Id/delete">delete</a></li>
      }
      </ul>
    }


  </div>


  <h3><a href='/vendor/new'>Add a new Vendor</a></h3>
  
  <h3><a href='/vendor/deleteAll'>Delete All Vendors</a></h3>
  
</div>