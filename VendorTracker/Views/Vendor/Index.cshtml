@using VendorTracker.Models;
@{
  Layout = "_Layout";
}
<div class="container">
  <div class="jumbotron">
    <h1>Welcome to the Vendor Page</h1>
  </div>

  <div id="vendorList">
    @if(Model.Count == 0)
    {
      <div class="card">
        <h4>There are currently no Venders!</h4>
      </div>
    }
    else
    {
      <h1>Vendors</h1>
      <hr>
      <ul>
      @foreach (Vendor v in Model)
      {
          <li><a href="/vendor/@v.Id">@v.Name</a> | <a href="/vendor/@v.Id/delete">delete</a></li>
      }
      </ul>
    }
    <hr>
    <button class="btn btn-danger" onclick="window.location.href='/vendor/new';">Add a Vendor</button>
    <button class="btn btn-danger" onclick="window.location.href='/vendor/deleteAll';">Delete all Vendors</button>

  </div>


  
</div>
@Html.Partial("Header")
  @Html.Partial("Footer")