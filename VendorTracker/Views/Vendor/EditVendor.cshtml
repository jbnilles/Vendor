@{
  Layout = "_Layout";
}
<div class="container">
  <h1>Edit Vendor</h1>


  <form action="/vendor/@Model.Id/edit" method="post">
    <label for="name">Vendor name</label>
    <input id="name" name="name" value="@Model.Name" type="text">
    <label for="description">Vendor Description</label>
    <input id="description" name="description" value="@Model.Description" type="text">
    <button type="submit">Edit</button>
  </form>

  <a href="/vendor">Return to Vendors Page.</a>
</div>
@Html.Partial("Header")
  @Html.Partial("Footer")