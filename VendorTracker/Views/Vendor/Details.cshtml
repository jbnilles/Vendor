@using VendorTracker.Models;
@if(Model == null)
{
  <h1>The Vendor Does Not Exist</h1>
  
}
else
{
  <div class="Container">
    <div class="jumbotron">
      <h1>Welcome to @Model.Name Page</h1>
      <h6>@Model.Description</h6>
    </div>

    <div id="vendorDetails">
      @if(Model.Count == 0)
      {
        <h1>There are currently no Orders!</h1>
      }
      else
      {
        <ul>
        @foreach (Order o in Model.orders)
        {
            <li><a href="/Order/@o.Id">@o.Name: @o.Date : @o.Price</a></li>
        }
        </ul>
      }


    </div>


    <h3><a href='/order/new'>Add a new Order</a></h3>
    
  </div>
}

