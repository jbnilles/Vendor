@using VendorTracker.Models;
@if(Model == null)
{
  <h1>The Vendor Does Not Exist</h1>
  
}
else
{
  <div class="Container">
    <div class="jumbotron">
      <h1>Welcome to @Model.Name Page</h1>
      <h6>@Model.Description</h6>
    </div>

    <div id="vendorDetails">
      @if(Model.getOrderCount() == 0)
      {
        <h1>There are currently no Orders!</h1>
      }
      else
      {
        <ul>
        @foreach (Order o in Model.getOrders())
        {
            <li>
              <a href="/vendor/@Model.Id/order/@o.Id">@o.Title:</a> <a href="/vendor/@Model.Id/order/@o.Id/delete">delete</a>
              <ul>
                <li>Date: @o.OrderDate.ToShortDateString()</li>
                <li>Price: $@o.Price</li>
                @if(@o.Paid)
                {
                  <li>Paid</li>
                }
                else
                {
                  <li>Not Paid</li>
                }
              </ul>
            </li>
        } 
        </ul>
      }


    </div>


    <h3><a href='/vendor/@Model.Id/order/new'>Add a new Order</a></h3>
    <h3><a href='/vendor/@Model.Id/edit'>Edit Current Vendor</a></h3>
    <a href="/vendor/">Return to Vendor Page.</a>
    <a href="/vendor/@Model.Id/order/deleteAll">Delete all Orders.</a>


    
  </div>
}

