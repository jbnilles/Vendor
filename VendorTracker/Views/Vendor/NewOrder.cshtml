@{
  Layout = "_Layout";
}
<div class="container">
  <h1>Add an Order</h1>
  <hr>
  <form action="/vendor/@Model.Id/order/new" method="post">
    <label for="title">Order Title</label>
    <input id="title" name="title" type="text">
    <label for="description">Order Description</label>
    <input id="description" name="description" type="text">
    <label for="price">Order price</label>
    <input id="price" name="price" step = ".01" type="number">
    <label for="orderDate">Order date</label>
    <input id="orderDate" name="orderDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date">
    <label for="paid">Check if Order is paid for.</label>
    <input id="paid" name="paid" value="true" type="checkbox">
    <button class="btn btn-primary" type="submit">Add</button>
  </form>
  <button class="btn btn-outline-danger" onclick="window.location.href='/vendor';">Vendors Page</button>
</div>
@Html.Partial("Header")
@Html.Partial("Footer")